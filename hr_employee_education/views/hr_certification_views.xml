<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr.certification View Tree -->
    <record id="view_hr_certification_tree" model="ir.ui.view">
        <field name="name">view.hr.certification.tree</field>
        <field name="model">hr.certification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View hr.certification form -->
    <record id="view_hr_certification_form" model="ir.ui.view">
        <field name="name">view.hr.certification.form</field>
        <field name="model">hr.certification</field>
        <field name="arch" type="xml">
            <form string="Hr Certification">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hr.certification search -->
    <record id="view_hr_certification_search" model="ir.ui.view">
        <field name="name">view.hr.certification.search</field>
        <field name="model">hr.certification</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hr.certification -->
    <record id="action_hr_certification" model="ir.actions.act_window">
        <field name="name">Hr Certification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.certification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hr Certification.
            </p>
        </field>
    </record>

</odoo>
