<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_job_form_inherit" model="ir.ui.view">
            <field name="name">hr.job.form.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <h3><field name="code" placeholder="Job Code..."/></h3>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <group>
                        <group>
                            <field name="email" placeholder="Job.position@mail.com"/>
                            <field name="coach_id" context="{'default_department_id': department_id}" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="extent" placeholder="Ext"/>
                        </group>
                        <group>
                            <field name="department_id" placeholder="Department" required="1" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[@name='job_description_page']" position="after">
                    <page string="Members" name="members">
                        <field name="member_ids">
                            <list>
                                <field name="name"/>
                                <field name="work_email"/>
                                <field name="private_street"/>
                            </list>
                        </field>
                    </page>
                    <page string="Primary Skills" name="skills">
                        <field name="skills_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_hr_job_tree_inherit" model="ir.ui.view">
            <field name="name">hr.job.list.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/> <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="department_id"/>
                    <field name="extent" string="Ext"/>
                    <field name="code" string="Code"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="email" string="Email"/>
                    <field name="coach_id" string="Leader"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>