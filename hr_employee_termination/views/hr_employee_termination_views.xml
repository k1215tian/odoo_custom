<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr.employee.termination View List -->
    <record id="view_hr_employee_termination_list" model="ir.ui.view">
        <field name="name">view.hr.employee.termination.list</field>
        <field name="model">hr.employee.termination</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View hr.employee.termination form -->
    <record id="view_hr_employee_termination_form" model="ir.ui.view">
        <field name="name">view.hr.employee.termination.form</field>
        <field name="model">hr.employee.termination</field>
        <field name="arch" type="xml">
            <form string="Hr Employee Termination">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hr.employee.termination search -->
    <record id="view_hr_employee_termination_search" model="ir.ui.view">
        <field name="name">view.hr.employee.termination.search</field>
        <field name="model">hr.employee.termination</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hr.employee.termination -->
    <record id="action_hr_employee_termination" model="ir.actions.act_window">
        <field name="name">Hr Employee Termination</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.termination</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hr Employee Termination.
            </p>
        </field>
    </record>

</odoo>
