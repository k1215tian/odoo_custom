<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr.config.notification View List -->
    <record id="view_hr_config_notification_list" model="ir.ui.view">
        <field name="name">view.hr.config.notification.list</field>
        <field name="model">hr.config.notification</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View hr.config.notification form -->
    <record id="view_hr_config_notification_form" model="ir.ui.view">
        <field name="name">view.hr.config.notification.form</field>
        <field name="model">hr.config.notification</field>
        <field name="arch" type="xml">
            <form string="Hr Config Notification">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hr.config.notification search -->
    <record id="view_hr_config_notification_search" model="ir.ui.view">
        <field name="name">view.hr.config.notification.search</field>
        <field name="model">hr.config.notification</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hr.config.notification -->
    <record id="action_hr_config_notification" model="ir.actions.act_window">
        <field name="name">Hr Config Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.config.notification</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hr Config Notification.
            </p>
        </field>
    </record>

</odoo>
